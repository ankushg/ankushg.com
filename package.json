{
  "name": "@ankushg/personal-site",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "watch": "concurrently -p \"[{name}]\" -n \"ASTRO,ASTRO-CHECK,TSC\" -c \"auto\" \"npm run dev\" \"npm run astro:check:watch\" \"npm run tsc:watch\" --restart-tries -1 --restart-after 5000",
    "dev": "astro dev",
    "start": "astro dev",
    "astro:watch": "astro dev",
    "astro:check": "astro check",
    "astro:check:watch": "npm-watch astro:check",
    "tsc": "tsc --noEmit",
    "tsc:watch": "tsc-watch --noEmit",
    "build": "astro check && tsc --noEmit && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier -w . --cache"
  },
  "watch": {
    "astro:check:watch": {
      "patterns": [
        "src/**.astro"
      ],
      "extensions": "astro",
      "quiet": false
    }
  },
  "dependencies": {
    "@astrojs/image": "^1.0.0-beta",
    "@astrojs/markdown-remark": "^2.0.0-beta",
    "@astrojs/mdx": "^1.0.0-beta.2",
    "@astrojs/react": "^2.0.0-beta",
    "@astrojs/rss": "^2.0.0",
    "@astrojs/sitemap": "^1.0.0",
    "@astrojs/tailwind": "^3.0.0-beta",
    "@astropub/md": "^0.1.4",
    "@headlessui/react": "^1.7.7",
    "@heroicons/react": "^2.0.13",
    "@tailwindcss/typography": "^0.5.9",
    "@types/node": "^18.11.18",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "astro": "^2.0.0-beta",
    "astro-heroicons": "^0.3.0",
    "astro-iconify": "^1.2.0",
    "autoprefixer": "^10.4.13",
    "date-fns": "^2.29.3",
    "nanoid": "^4.0.0",
    "npm-watch": "^0.11.0",
    "postcss-focus-visible": "^7.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sharp": "^0.31.3",
    "tailwindcss": "^3.2.4"
  },
  "devDependencies": {
    "@types/html-escaper": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "concurrently": "^7.6.0",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-astro": "^0.21.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.1",
    "prettier": "^2.8.3",
    "prettier-plugin-astro": "^0.7.2",
    "prettier-plugin-tailwindcss": "^0.2.1",
    "tsc-watch": "^6.0.0"
  }
}
