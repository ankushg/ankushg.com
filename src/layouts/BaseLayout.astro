---
import BaseHead from '../components/BaseHead.astro'
import HeaderFooterLayout from './HeaderFooterLayout.astro'
import type { PageMetadata } from '../mytypes'

type Props = Partial<PageMetadata>
---

<!DOCTYPE html>
<html lang="en" class="h-full antialiased">
  <BaseHead {...Astro.props} />
  <body class="flex h-full flex-col bg-zinc-50 dark:bg-black">
    <HeaderFooterLayout>
      <slot />
    </HeaderFooterLayout>
    <script>
      import {
        applyDarkModeSettings,
        listenForDarkModeChanges,
      } from '../scripts/toggleDarkMode'

      applyDarkModeSettings()
      listenForDarkModeChanges()
    </script>
  </body>
</html>
