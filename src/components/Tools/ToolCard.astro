---
import type { ToolData } from '@data/tools'
import Card from '@components/Card/Card.astro'
import CardTitle from '@components/Card/CardTitle.astro'
import CardDescription from '@components/Card/CardDescription.astro'

type Props = ToolData

const { name, href, description } = Astro.props
---

<Card as="li">
  <CardTitle as="h3" href={href}>
    {name}
  </CardTitle>
  <CardDescription>{description}</CardDescription>
</Card>
