---
import type { SocialLinkContent } from '@data/SocialLinks'
import Link from '@components/Link.astro'
import Icon from 'astro-iconify'

type Props = SocialLinkContent

const { iconName, text, href } = Astro.props
// TODO: use Image instead of img?
---

<Link class="group -m-1 p-1" href={href}>
  <Icon
    aria-label={text}
    name={iconName}
    class="h-6 w-6 text-zinc-500 transition group-hover:text-zinc-600 dark:text-zinc-400 dark:group-hover:text-zinc-300"
  />
</Link>
