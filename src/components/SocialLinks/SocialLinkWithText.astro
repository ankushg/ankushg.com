---
import type { SocialLinkContent } from '../../data/SocialLinks'
import Link from '../Link.astro'
import { Icon } from 'astro-iconify'

interface Props extends SocialLinkContent {
  class?: string
}

const { href, text, iconName, class: className } = Astro.props
// TODO: use Image instead of img?
---

<li class:list={[className, 'flex', 'mt-4']}>
  <Link
    href={href}
    class="group flex text-sm font-medium text-zinc-800 transition hover:text-teal-500 dark:text-zinc-200 dark:hover:text-teal-500"
  >
    <Icon
      alt=""
      name={iconName}
      class="h-6 w-6 fill-zinc-500 transition group-hover:fill-zinc-600 dark:fill-zinc-400 dark:group-hover:fill-zinc-300"
    />
    <span class="ml-4">
      <slot>
        {text}
      </slot>
    </span>
  </Link>
</li>
