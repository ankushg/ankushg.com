---
import {
  SITE_URL,
  SITE_DESCRIPTION,
  AUTHOR_TWITTER,
  PLACEHOLDER_SOCIAL_IMAGE,
} from '../consts'
import type { PageMetadata } from '../mytypes'

type Props = Partial<PageMetadata>

const {
  metaTitle,
  metaDescription = SITE_DESCRIPTION,
  metaImage = PLACEHOLDER_SOCIAL_IMAGE,
} = Astro.props
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<meta name="generator" content={Astro.generator} />

<!-- Primary Meta Tags -->
<title>{metaTitle}</title>
<meta name="title" content={metaTitle} />
<meta name="description" content={metaDescription} />

<!-- RSS Feeds -->
<link
  rel="alternate"
  type="application/rss+xml"
  href={`${SITE_URL}/feed.xml`}
/>

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={metaTitle} />
<meta property="og:description" content={metaDescription} />
<meta property="og:image" content={new URL(metaImage, Astro.url)} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={metaTitle} />
<meta property="twitter:description" content={metaDescription} />
<meta property="twitter:creator" content={AUTHOR_TWITTER} />
<meta property="twitter:image" content={new URL(metaImage, Astro.url)} />
