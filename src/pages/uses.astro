---
import ToolsSection from '../components/Tools/ToolsSection.astro'
import { AUTHOR } from '../consts'
import SimpleLayout from '../layouts/SimpleLayout.astro'
import { toolsContent } from '../data/tools'

const metaTitle = `Uses - ${AUTHOR}`
const header = 'Software I use, gadgets I love, and other things I recommend.'
const introText =
  'I get asked a lot about the things I use to build software, stay productive, or buy to fool myself into thinking I’m being productive when I’m really just procrastinating. Here’s a big list of all of my favorite stuff.'
---

<SimpleLayout metaTitle={metaTitle} heading={header}>
  <span slot="intro">{introText}</span>
  {toolsContent.map((toolSection) => <ToolsSection {...toolSection} />)}
  <div class="space-y-20"></div>
</SimpleLayout>
